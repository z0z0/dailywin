<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--General layout for views-->
    <style name="general_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#BDAEC6</item>
    </style>
    <!--Styles for list items-->
    <style name="activity_list">

    </style>
    <!--Styles for daily, weekly, random buttons-->
    <style name="filter_buttons">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:autoText">false</item>
        <!--??    android:layout_margin="0dp"-->
    </style>
    <!--Styles for save, delete, edit buttons-->
    <style name="buttons">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">22dp</item>
        <item name="android:background">#421C52</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:maxWidth">100dp</item>
    </style>
    <!--Add new activity style-->
    <style name="add_new">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:text">+</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40dp</item>
        <item name="android:longClickable">false</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:background">#421C52</item>
        <item name="android:shadowColor">#b0d</item>
        <item name="android:singleLine">false</item>
    </style>
    <!--Profile button style-->
    <style name="profile">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:src">@android:drawable/ic_menu_sort_by_size</item>
        <item name="android:gravity">left</item>
        <item name="android:clickable">true</item>
    </style>
    <!--APP title-->
    <style name="app_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:autoText">false</item>
        <item name="android:inputType">none</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">monospace</item>
        <item name="android:gravity">center|center_vertical</item>
    </style>
    <!--ADD NEW INPUT STYLING-->
    <style name="radio_btns">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:textColor">#010101</item>
        <item name="android:textSize">15dp</item>
    </style>
    <!--Radio GRP-->
    <style name="radio_grp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">7dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--Seek Bar-->
    <style name="seekBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">#fff</item>
        <item name="android:max">100</item>
        <item name="android:typeface">monospace</item>
    </style>
    <!--TXT Views-->
    <style name="txtView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_gravity">left|center_vertical</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:maxLength">55</item>
    </style>
    <!--EDIT Text-->
    <style name="editTxt">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textAppearance">@color/text</item>
        <item name="android:singleLine">false</item>
    </style>
</resources>